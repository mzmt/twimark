<!DOCTYPE html>
<html>
  <head>

  <!-- メディアクエリを読み込む -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>twimark</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body bgcolor = "teal">
    <header>
      <div class="header-logo">
<% if @current_user %>
          <%= link_to("twimark", "/posts/index") %>
        <% else %>
          <%= link_to("twimark", "/about") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("ブクマ一覧", "/posts/index") %>
          </li>
          <li>
            <%= link_to("新規ブクマ", "/posts/new") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout",{method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>